<?php
/**
 * Simple example of extending the SQLite3 class and changing the __construct
 * parameters, then using the open method to initialize the DB.
 */
class MyDB extends SQLite3
{
    function __construct()
    {
        $this->open('db/tracker.db');
    }
}

$db = new MyDB();

$hash='WhŘ|f0hOw';
//$query = 'SELECT ip FROM peers WHERE info_hash=\''.$hash.'\'';
//$result = $db->query($query);
//$result = $db->query('SELECT * FROM peers');

$db->bindValue(':info_hash', $hash, SQLITE3_BLOB);
$result = $db->query('SELECT * FROM peers WHERE info_hash=:info_hash');


while($res = $result->fetchArray())
{ 
  echo $res["ip"]."\n";
}
